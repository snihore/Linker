<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DomainTab">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/domain_progress_bar_layout">
            <ProgressBar
                android:id="@+id/domain_progress_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />
            <TextView
                android:id="@+id/domain_progress_finish_tag"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="recent updated"
                android:background="@drawable/bg08"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:padding="10dp"/>
        </RelativeLayout>

        <ListView
            android:layout_below="@+id/domain_progress_bar_layout"
            android:id="@+id/domain_names_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</FrameLayout>