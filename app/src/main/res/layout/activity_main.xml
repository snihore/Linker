<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/main_actionbar">
            <ImageView
                android:id="@+id/ham_menu_btn"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/hamburgermenu"
                android:background="?android:selectableItemBackground"
                android:padding="18dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Linker"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/menu"
                android:background="?android:selectableItemBackground"
                android:padding="18dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/main_actionbar"
            android:id="@+id/user_acc_info"
            android:padding="20dp"
            android:background="@color/grey01"
            android:layout_margin="10dp"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Account Email"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/user_acc_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/grey02"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Account Type"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Google Account"
                android:textSize="18sp"
                android:textColor="@color/grey02"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/user_acc_info"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="5dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="invisible">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg02"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group Tag"
                        android:fontFamily="monospace"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginRight="10dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg03"
                        android:src="@drawable/arrow1"
                        android:padding="5dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textSize="18sp"
                    android:textColor="@color/grey02"
                    android:textStyle="italic"
                    android:text="Android dev"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:fontFamily="monospace"
                android:layout_marginTop="40dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <EditText
                    android:id="@+id/link_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:fontFamily="monospace"
                    android:textSize="18sp"
                    android:textColor="@color/grey02"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:backgroundTint="@color/green01"/>
                <ImageView
                    android:id="@+id/paste_btn"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/paste1"
                    android:background="?android:selectableItemBackground"
                    android:layout_weight="1" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag (optional)"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <EditText
                    android:id="@+id/tag_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:fontFamily="monospace"
                    android:textSize="18sp"
                    android:textColor="@color/grey02"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:backgroundTint="@color/green01"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/tag"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp">
                <Button
                    android:id="@+id/link_save_btn"
                    android:visibility="visible"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_bg01"
                    android:fontFamily="monospace"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"/>
                <ProgressBar
                    android:id="@+id/main_progress_bar"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>