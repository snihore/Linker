<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg04"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:id="@+id/link_bottom_sheet_layout">

    <TextView
        android:id="@+id/link_bottom_sheet_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"
        android:text=""
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:id="@+id/link_bottom_sheet_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/grey02"
        android:background="?android:selectableItemBackground"
        android:fontFamily="monospace"
        android:text="Open"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey01"/>
    <TextView
        android:id="@+id/link_bottom_sheet_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/grey02"
        android:background="?android:selectableItemBackground"
        android:fontFamily="monospace"
        android:text="Delete"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey01"/>
    <TextView
        android:id="@+id/link_bottom_sheet_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/grey02"
        android:background="?android:selectableItemBackground"
        android:fontFamily="monospace"
        android:text="Share"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey01"/>
    <TextView
        android:id="@+id/link_bottom_sheet_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/grey02"
        android:background="?android:selectableItemBackground"
        android:fontFamily="monospace"
        android:text="Modify"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

</LinearLayout>